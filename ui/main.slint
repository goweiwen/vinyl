import { Model, Song } from "model.slint";
import { Player } from "player.slint";
import "fonts/Nunito.ttf";

export global MusicService {
    callback play_song(Song);
}

export component MainWindow inherits Window {
    default-font-family: "Nunito";
    width: 640px;
    height: 480px;

    in-out property <Model> model;

    Player {
        play_song(song) => { MusicService.play_song(song) }
        now-playing: model.now-playing;
    }
}
