export struct Song {
    path: string,
    title: string,
    artist: string,
    album: string,
    cover-art: image,
    duration: int,
}

export global NowPlaying {
    callback load_song(Song);
    callback play();
    callback pause();
    callback seek(int);

    in-out property <Song> song;
    in-out property <int> progress: 0;
    in-out property <bool> is-playing: false;
}
